<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="estudiantesTable"
        messagesPack="com.company.prueba1.web.screens.estudiante">
    <data readOnly="true">
        <collection id="materiasDc" class="com.company.prueba1.entity.Materia" view="_local">
            <loader id="materiasDl">
                <query>
                    <![CDATA[select e from prueba1_Materia e ]]>
                </query>
            </loader>
        </collection>
        <collection id="estudiantesDc"
                    class="com.company.prueba1.entity.Estudiante"
                    view="_local">
            <loader id="estudiantesDl">
                <query>
                    <![CDATA[select e from prueba1_Estudiante e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="estudiantesTable"
            spacing="true">
        <filter id="filter"
                applyTo="estudiantesTable"
                dataLoader="estudiantesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="estudiantesTable"
                    width="100%"
                    dataContainer="estudiantesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="nombre"/>
                <column id="apellido"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <hbox spacing="true">
                    <button id="createBtn" action="estudiantesTable.create"/>
                    <button id="editBtn" action="estudiantesTable.edit"/>
                    <button id="removeBtn" action="estudiantesTable.remove"/>
                </hbox>
                <hbox spacing="true" align="TOP_RIGHT">
                    <button id="verMaterias" align="TOP_RIGHT" caption="Ver Materias"/>
                </hbox>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
